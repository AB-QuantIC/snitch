root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

# SystemVerilog wants 2 spaces of indentation
[*.{sv,svh}]
indent_size = 2

[*.yml]
indent_size = 2

[*.{c,h,C,H,cpp,hpp,cc,hh,c++,h++,cxx,hxx}]
indent_size = 2

# Use tabs for Makefiles.
[Makefile]
indent_style = tab
